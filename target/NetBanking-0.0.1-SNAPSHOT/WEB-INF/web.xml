<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.netbanking.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>
    
    <servlet>
	    <servlet-name>AccountsServlet</servlet-name>
	    <servlet-class>com.netbanking.servlet.AccountsServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>AccountsServlet</servlet-name>
	    <url-pattern>/accounts</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>TransactionServlet</servlet-name>
	    <servlet-class>com.netbanking.servlet.TransactionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>TransactionServlet</servlet-name>
	    <url-pattern>/transaction</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>StatementServlet</servlet-name>
	    <servlet-class>com.netbanking.servlet.StatementServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>StatementServlet</servlet-name>
	    <url-pattern>/statement</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>ProfileServlet</servlet-name>
	    <servlet-class>com.netbanking.servlet.ProfileServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ProfileServlet</servlet-name>
	    <url-pattern>/profile</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ActionServlet</servlet-name>
		<servlet-class>com.netbanking.servlet.ActionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ActionServlet</servlet-name>
		<url-pattern>/action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CreateEmployeeServlet</servlet-name>
		<servlet-class>com.netbanking.servlet.CreateEmployeeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>CreateEmployeeServlet</servlet-name>
		<url-pattern>/createEmployee</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>BranchServlet</servlet-name>
		<servlet-class>com.netbanking.servlet.BranchServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>BranchServlet</servlet-name>
		<url-pattern>/branch</url-pattern>
	</servlet-mapping>
		
	<servlet>
		<servlet-name>CreateCustomerServlet</servlet-name>
		<servlet-class>com.netbanking.servlet.CreateCustomerServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>CreateCustomerServlet</servlet-name>
		<url-pattern>/createCustomer</url-pattern>
	</servlet-mapping>
	
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
   
	
	<filter>
	  <filter-name>AuthFilter</filter-name>
	  <filter-class>com.netbanking.servlet.AuthFilter</filter-class>
	</filter>
	
	<filter-mapping>
	  <filter-name>AuthFilter</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
