<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger - %msg%n%throwable{full}" />
		</Console>
		<File name="File"
			fileName="/home/jubair-tt0487/netbanking-app/NetBanking/logs/app.log"
			append="true">
			<PatternLayout
				pattern="%d %p %c{1.} %M - %m%n%throwable{full}" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>